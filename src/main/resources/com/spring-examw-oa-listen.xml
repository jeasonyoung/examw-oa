<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<!-- 配置 -->
<beans>
		<bean id="ReportController" class="com.examw.oa.controllers.plan.ReportController"/>
		<bean id="methodInvokingJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
			<property name="report" ref="ReportController"/>
			<property name="listenMethod" ref="listenJob"/>
		</bean>
		<!-- 配置触发器 每天23:59进行触发-->
		<bean id="cronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
			<property name="jodDetail" ref="methodInvokingJobDetail"/>
			<property name="cronExpression">
          	<value>0 59 23 * * ?</value>
      	    </property>
		</bean>
		<!-- 配置触发器 每周星期五23:59进行触发-->
		<bean id="cronTrigger1" class="org.springframework.scheduling.quartz.CronTriggerBean">
			<property name="jodDetail" ref="methodInvokingJobDetail"/>
			<property name="cronExpression">
          	<value>0 59 23 ? * FRI</value>
      	    </property>
		</bean>
		<!-- 配置触发器 每月最后一天23:59进行触发-->
		<bean id="cronTrigger2" class="org.springframework.scheduling.quartz.CronTriggerBean">
			<property name="jodDetail" ref="methodInvokingJobDetail"/>
			<property name="cronExpression">
          	<value>0 59 23 L * ?</value>
      	    </property>
		</bean>
	<!-- 添加触发器 -->
		<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
	       <property name="triggers">
	           <list>
	              <ref local="cronTrigger" />
	              <ref local="cronTrigger1" />
	              <ref local="cronTrigger2" />
	           </list>
	       </property>
	    </bean>
	
</beans>