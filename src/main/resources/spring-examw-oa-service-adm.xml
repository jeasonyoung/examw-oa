<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<!-- 栏目信息 -->
	<bean id="noticeColumnService" class="com.examw.oa.service.adm.impl.NoticeColumnServiceImpl">
		<!-- 栏目数据接口 -->
		<property name="notcDao" ref="notcDao"/>
	</bean>
	<!-- 通告信息 -->
	<bean id="noticeService" class="com.examw.oa.service.adm.impl.NoticeServiceImpl">
		<!-- 通告数据接口 -->
		<property name="noticeDao" ref="noticeDao"/>
		<!-- 部门数据接口 -->
		<property name="departmentDao" ref="departmentDao"/>
		<!-- 栏目数据接口 -->
		<property name="notcDao" ref="notcDao"/>
		<!-- 通告设置类型集合 -->
		<property name="typeMap">
			<map>
				<!-- 通知公告 -->
				<entry key="1" value="${TYPE_NOTICE}"/>
				<!-- 规章制度 -->
				<entry key="2" value="${TYPE_RULES}"/>
			</map>
		</property>
	</bean>
	<!-- 请假信息 -->
	<bean id="leaveService" class="com.examw.oa.service.adm.impl.LeaveServiceImpl">
		<!-- 请假数据接口 -->
		<property name="leaveDao" ref="leaveDao"/>
		<!-- 员工数据接口 -->
		<property name="employeeDao" ref="employeeDao" />
		<!-- 请假审核数据接口 -->
		<property name="approvalDao" ref="approvalDao"/>
		<!-- 部门数据接口 -->
		<property name="departmentDao" ref="departmentDao"/>
		<!-- 请假类型集合 -->
		<property name="typeMap">
			<map>
				<!-- 休假 -->
				<entry key="1" value="${TYPE_VACATION}"/>
				<!-- 事假 -->
				<entry key="2" value="${TYPE_COMPA}"/>
				<!-- 其他 -->
				<entry key="3" value="${TYPE_OTHER}"/>
				<!-- 病假 有证明 -->
				<entry key="4" value="${TYPE_SICK_PROVE}"/>
				<!-- 病假 无证明 -->
				<entry key="5" value="${TYPE_SICK_NONPROVE}"/>
			</map>
		</property>
		<!-- 请假类型集合 -->
		<property name="statusMap">
			<map>
				<!-- 批准 -->
				<entry key="1" value="${STATUS_PASS}"/>
				<!-- 未批准 -->
				<entry key="2" value="${STATUS_NOPASS}"/>
			</map>
		</property>
	</bean>
	<!-- 请假审核信息 -->
	<bean id="approvalService" class="com.examw.oa.service.adm.impl.LeaveApprovalServiceImpl">
		<!-- 请假审核数据接口 -->
		<property name="approvalDao" ref="approvalDao"/>
		<!-- 请假审核类型集合 -->
		<property name="typeMap">
			<map>
				<!-- 部门经理（主管）意见 -->
				<entry key="1" value="${TYPE_LEADER}"/>
				<!-- 行政人事部意见 -->
				<entry key="2" value="${TYPE_ADM}"/>
				<!-- 公司总经理审批 -->
				<entry key="3" value="${TYPE_BOSS}"/>
			</map>
		</property>
		<!-- 请假审核状态集合 -->
		<property name="statusMap">
			<map>
				<!--  审批结果－同意 -->
				<entry key="1" value="${STATUS_AGREE}"/>
				<!-- 审批结果－不同意 -->
				<entry key="2" value="${STATUS_DISAGREE}"/>
			</map>
		</property>
	</bean>
</beans>